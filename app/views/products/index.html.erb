<h1>Products list</h1>

<div class ="row">
  <div class ="col-md-12">
    <h3>Products
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary btn-sm' %>
    </h3>
    <div class="bs-example" data-example-id="condensed-table">
     <table class="table table-condensed"> 
     <thead> 
       <tr> 
       <th>ID</th> 
       <th>Name</th> 
       <th></th> 
       </tr> 
     </thead> 
     <tbody> 
     <% @products.each do |product| %>
       <tr> 
       <td><%= product.id %></td> 
       <td><%= link_to product.name, edit_product_path(product) %></td> 
       <td><%= link_to 'Edit', edit_product_path(product) %></td>
       <td><%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: "Are you sure?"}, class: 'pull-right' %> </td>
       </tr>   
       <% end %>
     </tbody> 
     </table> 
     </div>
 </div>
